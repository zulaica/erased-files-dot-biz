{
  "name": "erased-files-dot-biz",
  "author": "David Zulaica",
  "version": "1.0.0",
  "description": "Website for the band Erased Files",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=16"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zulaica/erased-files-dot-biz.git"
  },
  "bugs": {
    "url": "https://github.com/zulaica/erased-files-dot-biz/issues"
  },
  "homepage": "https://github.com/zulaica/erased-files-dot-biz#readme",
  "@comment scripts": {
    "lint": [
      "Linters exit with a non-zero code when warnings or errors are found.",
      "In order to run both linters sequentially, `|| true` is used to coerce",
      "an exit code of `0` to let the next command run."
    ]
  },
  "scripts": {
    "build": "npm run build:clean && npm run build:style && npm run build:script && npm run build:html && npm run build:assets",
    "build:assets": "node ./lib/assets.mjs",
    "build:clean": "rm -rf build",
    "build:html": "posthtml source/index.html -o build/index.html",
    "build:script": "browserify source/script.[hash].js -o build/script.[hash].js -t [ babelify ]",
    "build:style": "postcss source/stylesheet.[hash].css -o build/stylesheet.[hash].css",
    "dev": "python3 -m http.server -d ./source/",
    "lint": "npm run lint:js || true && npm run lint:css",
    "lint:css": "npx stylelint ./source/**/*.css --color --cache",
    "lint:js": "npx eslint . --color --cache",
    "lint:fix": "npm run lint:fix:css && npm run lint:fix:js",
    "lint:fix:css": "npm run lint:css --fix",
    "lint:fix:js": "npm run lint:js --fix",
    "stage": "npm run build && gh-pages -d build"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "autoprefixer": "^10.4.7",
    "babelify": "^10.0.0",
    "browserify": "^17.0.0",
    "cssnano": "^5.1.7",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "gh-pages": "^4.0.0",
    "htmlnano": "^2.0.2",
    "postcss": "^8.4.13",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.1.0",
    "postcss-preset-env": "^7.5.0",
    "postcss-url": "^10.1.3",
    "posthtml-cli": "^0.10.0",
    "posthtml-hash": "^1.2.2",
    "prettier": "^2.5.0",
    "stylelint": "^14.8.2",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^25.0.0"
  }
}
